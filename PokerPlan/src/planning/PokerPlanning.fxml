<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="planning.Controller">
   <children>
      <Pane prefHeight="500.0" prefWidth="500.0">
         <children>
            <AnchorPane prefHeight="50.0" prefWidth="500.0">
               <children>
                  <Pane prefHeight="50.0" prefWidth="500.0" style="-fx-background-color: #000000;">
                     <children>
                        <Label layoutX="187.0" text="Poker Planning" textFill="#fcfafa">
                           <font>
                              <Font name="Avenir Light" size="19.0" />
                           </font>
                        </Label>
                        <Label fx:id="stop" layoutX="348.0" layoutY="20.0" style="-fx-background-color: #000000;" text="Timer:" textFill="WHITE" />
                        <Label fx:id="greeting" layoutX="14.0" layoutY="12.0" text="Hello!" textFill="WHITE" />
                     </children>
                  </Pane>
               </children>
            </AnchorPane>
            <Button fx:id="startStopButton" layoutX="339.0" layoutY="50.0" mnemonicParsing="false" onAction="#toggleStopwatch" text="Start" />
            <Button fx:id="endButton" layoutX="401.0" layoutY="50.0" mnemonicParsing="false" onAction="#EndButton" text="End Timer" />
            <Label layoutX="98.0" layoutY="256.0" prefHeight="51.0" prefWidth="304.0" text="Pick Your Poker Number:" textAlignment="CENTER">
               <font>
                  <Font name="Al Bayan Bold" size="25.0" />
               </font>
            </Label>
            <TextField fx:id="UserPoker" layoutX="243.0" layoutY="307.0" onAction="#UserInput" prefHeight="26.0" prefWidth="10.0" />
            <Label layoutX="189.0" layoutY="120.0" prefHeight="17.0" prefWidth="100.0" text="User Story:" textAlignment="CENTER">
               <font>
                  <Font size="21.0" />
               </font>
            </Label>
            <Label alignment="TOP_CENTER" layoutX="190.0" layoutY="336.0" prefHeight="150.0" prefWidth="120.0" style="-fx-background-color: black;" text="Poker Card" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Al Nile Bold" size="18.0" />
               </font></Label>
            <Label fx:id="cardNum" layoutX="243.0" layoutY="397.0" prefHeight="28.0" prefWidth="15.0" textFill="#fffbfb">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
            <Label alignment="TOP_LEFT" layoutX="125.0" layoutY="147.0" prefHeight="120.0" prefWidth="250.0" style="-fx-background-color: grey;" text="Generated User Story..." textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </children>
</AnchorPane>
